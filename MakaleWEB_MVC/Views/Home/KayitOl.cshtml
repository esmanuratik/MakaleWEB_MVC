@using Makale_Entities.ViewModel
@model RegisterModel

@{
    ViewBag.Title = "KayitOl";
}

<link href="~/Content/login.css" rel="stylesheet" />
<link href="~/Content/ValidationCSS.css" rel="stylesheet" />

@using (Html.BeginForm())//sayfayı post ediceğim için beginform açtım
{
    <section class="login-info">
        <div class="container">
            <div class="row main">
                <div class="form-header">
                    <h1 class="text-center ">Kayıt Ekranı</h1>
                </div>
                <div class="main-content">

                    @Html.ValidationSummary(false) @*//bu modele uygun mu girilen kullancı adı*@

                    <div class="input-group ">
                        <span class="input-group-addon"><span class="glyphicon glyphicon-user" aria-hidden="true"></span></span>
                        @*<input id="email" type="text" class="form-control" name="email" placeholder="Enter your Email">*@

                        @Html.TextBoxFor(x => x.KullaniciAdi, new { @class = "form-control", placeholder = "Kullanıcı Adı" })
                    </div>

                    <div class="input-group ">
                        <span class="input-group-addon"><span class="glyphicon glyphicon-envelope" aria-hidden="true"></span></span>
                        @*<input id="email" type="text" class="form-control" name="email" placeholder="Enter your Email">*@

                        @Html.TextBoxFor(x => x.Email, new { @class = "form-control", placeholder = "E-Mail" })
                    </div>

                    <div class="input-group">
                        <span class="input-group-addon"><span class="glyphicon glyphicon-lock" aria-hidden="true"></span></span>
                        @*<input id="password" type="password" class="form-control" name="password" placeholder="Enter your Password">*@
                        @Html.TextBoxFor(x => x.Sifre, new { @class = "form-control", placeholder = "Şifre", type = "password" })
                    </div>

                    <div class="input-group">
                        <span class="input-group-addon"><span class="glyphicon glyphicon-lock" aria-hidden="true"></span></span>
                        @*<input id="password" type="password" class="form-control" name="password" placeholder="Enter your Password">*@
                        @Html.TextBoxFor(x => x.Sifre2, new { @class = "form-control", placeholder = "Şifre Tekrar", type = "password" })
                    </div>


                    <div class="form-group ">
                        <button type="submit" class="btn btn-info btn-lg btn-block login-button">Kayıt Ol</button>
                    </div>



                </div>
            </div>
        </div>
    </section>

}

